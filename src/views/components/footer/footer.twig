<footer class="store-footer">
	<div aria-label="footer" class="store-footer__inner">
		<div class="container grid grid-col-1 lg:grid-cols-6 gap-8 lg:gap-6">
			
			<!-- القسم الأول: معلومات المتجر -->
			<div class="lg:col-span-2 rtl:lg:pl-20 ltr:lg:pr-20">
				<a href="{{ link('/') }}" class="flex items-center m-0">
					<h3>{{store.name}}</h3>
				</a>
				{% if store.description %}
					<p class="max-w-sm leading-6 mb-6">
						{{ store.description|raw }}
					</p>
				{% endif %}

				<div class="hidden lg:block">
					<salla-social class="mb-6"></salla-social>
				</div>

				{# vat #}
				{% if store.settings.tax.number %}
					<div class="flex rtl:space-x-reverse space-x-2 items-end">
						{% if store.settings.tax.certificate %}
							<a class="load-img-onclick" data-modal-id="modal-value-tax" href="#/" alt="{{ store.settings.tax.number }}">
								<img width="100%" height="100%" src="{{ 'images/s-empty.png' | cdn }}" data-src="{{'images/tax.png' | cdn(70,70)}}" class="lazy w-10 rounded-sm hover:opacity-80 transition-opacity" alt="value added tax">
							</a>
						{% endif %}
						<div>
							<p class="text-sm text-text-grey mb-1">{{ trans('common.elements.tax_number') }}</p>
							<b class="text-sm">{{ store.settings.tax.number }}</b>
						</div>
					</div>

					{% if store.settings.tax.certificate %}
						<salla-modal sub-title-first sub-title="{{ trans('common.elements.tax_number') }}" modal-title="{{ store.settings.tax.number }}" id="modal-value-tax">
							<div class="flex justify-center max-w-full">
								<img class="w-full" loading="lazy" 
								src="{{ 'images/s-empty.png' | cdn }}" 
								data-src="{{ store.settings.tax.certificate }}" 
								alt="{{ store.settings.tax.number }}"/>
							</div>
						</salla-modal>
					{% endif %}
				{% endif %}
			</div>

			<!-- القسم الثاني: روابط مهمة -->
			<div>
				<h3>{{ trans('blocks.footer.pages_links') }}</h3>
				<salla-menu source="footer"></salla-menu>
			</div>

			<!-- القسم الثالث: معلومات الاتصال -->
			<div>
				<salla-contacts></salla-contacts>

				<div class="lg:hidden contact-social">
					<salla-social></salla-social>
				</div>
			</div>

			<!-- القسم الرابع: تحميل تطبيق الجوال -->
			<salla-apps-icons class="lg:col-span-2 rtl:lg:pr-20 ltr:lg:pl-20"></salla-apps-icons>

		</div>
	</div>

	<!-- القسم الخامس: وسائل التواصل الاجتماعي والدفع -->
	<div class="md:flex items-center justify-between py-4 container text-center">
		<ul class="flex justify-center md:justify-start mb-2 md:mb-0">
			<li class="rtl:ml-2.5 ltr:mr-2.5">
				<a href="https://www.instagram.com/yourstore" target="_blank" class="social-link">
					<i class="sicon-instagram"></i>
				</a>
			</li>
			<li class="rtl:ml-2.5 ltr:mr-2.5">
				<a href="https://twitter.com/yourstore" target="_blank" class="social-link">
					<i class="sicon-twitter"></i>
				</a>
			</li>
			<li class="rtl:ml-2.5 ltr:mr-2.5">
				<a href="https://www.snapchat.com/add/yourstore" target="_blank" class="social-link">
					<i class="sicon-snapchat"></i>
				</a>
			</li>
		</ul>

		<span class="text-sm copyright-text">{% hook copyright %}</span>

		<ul class="flex justify-center items-stretch rtl:space-x-reverse space-x-2">
			<li class="w-12 h-8 bg-white rounded flex items-center p-1">
				<img src="{{ 'path/to/mada-logo.png' }}" alt="mada" class="lazy object-contain max-h-full">
			</li>
			<li class="w-12 h-8 bg-white rounded flex items-center p-1">
				<img src="{{ 'path/to/credit-card-logo.png' }}" alt="credit_card" class="lazy object-contain max-h-full">
			</li>
			<li class="w-12 h-8 bg-white rounded flex items-center p-1">
				<img src="{{ 'path/to/applepay-logo.png' }}" alt="apple_pay" class="lazy object-contain max-h-full">
			</li>
		</ul>
	</div>
</footer>
